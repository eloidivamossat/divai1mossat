 
 

 <!-- BUSQUEDA POR PELICULA-->
<div class="row" style="margin-top:110px;">
 <div class="col-sm-6" style="text-align:center;">
   <%= form_tag(root_path, :method => "get", id: "search-form", html: { class: 'form-horizontal col-sm-4'} ) do %>
       <%= text_field_tag :search, params[:search], placeholder:"Buscar por Pelicula" %>
       <%= submit_tag "Search", :name => nil %> 
   <% end %>
 </div>

<!-- BUSQUEDA POR DROPDOWN POR GENRE-->
 <div class="col-sm-6" style="text-align:center;">
    <div class="form-inline">
          <%= form_tag(root_path, :method => "get", id: "genre") do %>
            <%= select_tag :search_genre, ("<option> Select Genre</option><br><option>ACTION</option><option>ADVENTURE</option><option>COMEDY</option><option>CRIME</option><option>DRAMA</option><option>HISTORICAL</option><option>HORROR</option><option>MUSICALS</option><option>SCIENCE-FICTION</option><option>WAR</option><option>WESTERNS</option>").html_safe, class: 'btn btn-primary', style:"width:195px;", :onchange => "this.form.submit()"%>
          <% end %>
    </div> 
  </div> 

</div> <!-- end row -->

<!-- BUSQUEDA POR AÑO-->
<div class="row">
 <div class="col-sm-6" style="text-align:center;">
     <%= form_tag(root_path, :method => "get", id: "search-year-form", html: { class: 'form-horizontal col-sm-4'} ) do %>
     <%= text_field_tag :search_year, params[:search_year], placeholder: "Buscar por Año"  %>
       <%= submit_tag "Search", :year => nil %>

   <% end %>
 </div> 
</div> <!-- end row -->


<div class="row">

  


</div> <!-- end row -->
 




 <%= render "shared/header" %>
<!-- MOSTRAR LAS PELICULAS -->  
<div class="row">
   <% @peliculas.each do |peli|%>
   <div class="col-sm-6 col-md-4 col-lg-3">
       <div class="latest-movie">
           <a href="#"><img src="<%= peli.url %>" style="width:165px; height: 125px;"></a>
           <p><b>Id:</b> <%= peli.id %></p>
           <p><b>Nombre:</b> <%= peli.name %></p>
           <p><b>Director:</b> <%= peli.director %></p>
           <p><b>Año:</b> <%= peli.year %></p>
           <p><b>Genero:</b> <%= peli.genre %></p>
       </div>
   </div>
   <%end%>
</div
