 

<%= render "shared/header" %>
<div class="container">

<h1>Listado de Peliculas y comentarios</h1>

<% @peliculas.each do |peli| %>
  <p>ID: <%= peli.id %></p>
  <p>Nombre :<%= link_to peli.name %></p>
  <p>Director: <%= peli.director %></p>
  <p>Actor Secundario: <%= peli.supporting_actor %></p>
  <p>Premios: <%= peli.awards %></p>
  <p>Url: <%= peli.url %></p>
  <p>Actor Principal: <%= peli.actor %></p>
  <p>Año: <%= peli.year %></p>
  <p>Género: <%= peli.genre %></p>
  <p>Precio: <%= peli.price %></p>

<p><%=link_to "Añadir pelicula", new_pelicula_path, class:"btn btn-md btn-success" %></p>
<p><%=link_to "Editar pelicula", edit_pelicula_path(@peliculas), class:"btn btn-md btn-success" %></p>
<p><%= link_to 'Eliminar', { action: :destroy, id: peli.id }, method: :delete, class:"btn btn-md btn-success" %></p>

<% end %>
 <%= link_to 'Nuevo Film', new_pelicula_path, title:"Añade un nuevo film !!", class:"btn btn-sm btn-danger" %>
 <%= link_to 'Home', statics_index_path, title:"Home", class:"btn btn-sm btn-danger" %>
<%if flash[:danger].present?%>
<div class="row">
    <div class="col-sm-12 col-md-10 col-md-offset-1" style="margin-top:10px;">
        <%= render partial: "shared/flash_messages", flash: flash %>
    </div>
</div>
<%end%> 

</div> 
<%= render "shared/footer" %> 